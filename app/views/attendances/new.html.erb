<h1>Event Check-in</h1>
<%= form_for @attendance, url: { action: "create" } do |f| %>
  <p>Welcome! Please enter the event code and your phone number. We'll get you going right away.</p>
  <%= render 'shared/error_messages', object: @attendance %>
  <div class="form-group">
    <%= f.label :event_code %>
    <%= f.text_field :event_code, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :user_phone %>
    <%= f.text_field :user_phone, class: "form-control input-lg" %>
  </div>

  <div class="actions">
    <p>
      <%= f.submit "Check In", class: "btn btn-primary btn-xl" %>
    </p>
  </div>
<% end %>