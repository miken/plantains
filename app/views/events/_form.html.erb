<%= form_for(event) do |f| %>
  <%= render 'shared/error_messages', object: event %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :code %>
    <%= f.text_field :code, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :award_points %>
    <%= f.number_field :award_points, class: "form-control input-lg" %>
  </div>

  <div class="actions">
    <p>
      <%= f.submit "Update Event", class: "btn btn-primary btn-xl" %>
    </p>
  </div>
<% end %>
